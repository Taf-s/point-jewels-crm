# ==============================================
# SANITY CMS CONFIGURATION
# ==============================================
SANITY_PROJECT_ID=your-project-id-here
SANITY_DATASET=production
SANITY_API_TOKEN=your-api-token-here

# ==============================================
# ENCRYPTION & CRYPTOGRAPHY (TIER 1)
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=9d8df92c9163fce6dcf2a96ea5a7a1baa4606302c2f23bf42137a3f2618127ba

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=generate-strong-random-secret-here
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
JWT_ALGORITHM=HS256

# ==============================================
# WEBHOOK SECURITY
# ==============================================
WEBHOOK_SECRET=generate-webhook-secret-here
WEBHOOK_TIMEOUT=30000
WEBHOOK_RATE_LIMIT=100

# ==============================================
# AI & BOT PROTECTION
# ==============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
BOT_DETECTION_ENABLED=true
SUSPICIOUS_ACTIVITY_THRESHOLD=5

# ==============================================
# DDoS & SECURITY HEADERS
# ==============================================
CORS_WHITELIST=http://localhost:3333,https://your-domain.com
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_MAX_AGE=31536000

# ==============================================
# EMAIL SERVICE (FOR SECURITY ALERTS)
# ==============================================
EMAIL_SERVICE_URL=https://your-email-service.com
EMAIL_API_KEY=your-email-api-key-here
SECURITY_ALERT_EMAIL=security@pointjewels.com

# ==============================================
# ENVIRONMENT & DEPLOYMENT
# ==============================================
NODE_ENV=development
APP_URL=http://localhost:3333
LOG_LEVEL=debug
AUDIT_LOG_ENABLED=true
ENCRYPTION_AT_REST_ENABLED=true

# ==============================================
# ADVANCED SECURITY (TIER 2+)
# ==============================================
# 2FA Secret
TWO_FACTOR_ENABLED=false
TWO_FACTOR_WINDOW=30

# API Rate Limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600000

# Data Masking
DATA_MASKING_ENABLED=true
SENSITIVE_FIELDS_MASKED=email,phone,ssn,address

# Intrusion Detection
INTRUSION_DETECTION_ENABLED=false
ANOMALY_THRESHOLD=3

# ==============================================
# COMPLIANCE & MONITORING
# ==============================================
GDPR_ENABLED=true
PCI_DSS_ENABLED=false
SOC2_ENABLED=false
SECURITY_AUDIT_LOG_RETENTION=90

# ==============================================
# THREAT INTELLIGENCE
# ==============================================
IP_REPUTATION_CHECK_ENABLED=true
GEO_BLOCKING_ENABLED=false
BLOCKED_COUNTRIES=
ALLOWED_COUNTRIES=
